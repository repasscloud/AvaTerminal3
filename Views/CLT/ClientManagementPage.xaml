<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:AvaTerminal3.Views.Components"
             x:Class="AvaTerminal3.Views.CLT.ClientManagementPage"
             Title="Client Management">

    <Grid RowDefinitions="*,Auto"
          Padding="20">

        <!-- Main Content -->
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Top Action Bar -->
            <HorizontalStackLayout Spacing="12"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start">

                <!-- Search Input -->
                <Entry Placeholder="Enter Client ID, Company Name, etc..."
                       Text="{Binding ClientId}"
                       WidthRequest="400" />

                <!-- Search Button -->
                <Button Text="Search"
                        Command="{Binding SearchCommand}"
                        BackgroundColor="#0d6efd"
                        TextColor="White" />

                <!-- New Button (you can wire this to another command if needed) -->
                <Button Text="New"
                        Command="{Binding NewClientCommand}"
                        BackgroundColor="#198754"
                        TextColor="White" />
            </HorizontalStackLayout>

            <!-- Output area -->
            <Label Text="{Binding ClientData}"
                   FontSize="14"
                   LineBreakMode="WordWrap"
                   Margin="0,12,0,0" />

        </VerticalStackLayout>

        <!-- Bottom Clock Bar -->
        <components:BottomClockBar Grid.Row="1" />
    </Grid>
</ContentPage>
