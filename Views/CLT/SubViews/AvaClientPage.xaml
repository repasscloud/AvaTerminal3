<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AvaTerminal3.Views.CLT.SubViews.AvaClientPage">

    <ScrollView>
        <Grid Padding="16"
              RowDefinitions="Auto,Auto,Auto"
              ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*"
              ColumnSpacing="8" RowSpacing="4">

            <!-- Row 0: Label -->
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Client ID" />
            <Label Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" Text="Company Name" />
            <Label Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="1" Text="Default Currency" />

            <!-- Row 1: Entry -->
            <Entry Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Fish" IsEnabled="False" />
            <Entry Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" Text="" />
            <Picker Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="1" ItemsSource="{Binding CurrencyList}" SelectedItem="{Binding SelectedCurrency}" />

            <!-- Row 2: Save Button -->
            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
            Text="Save" Command="{Binding SaveCommand}" />
        </Grid>
    </ScrollView>
</ContentPage>



