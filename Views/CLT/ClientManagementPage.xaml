<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:AvaTerminal3.Views.Components"
             xmlns:vm="clr-namespace:AvaTerminal3.ViewModels"
             x:Class="AvaTerminal3.Views.CLT.ClientManagementPage"
             Title="Client Management"
             x:DataType="vm:ClientManagementViewModel">

    <Grid RowDefinitions="*,Auto"
          Padding="20">

        <!-- Main Content -->
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Top Action Bar -->
            <HorizontalStackLayout Spacing="12"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start">

                <!-- Search Input -->
                <Entry Placeholder="Enter Client ID, Company Name, etc..."
                       Text="{Binding ClientId}"
                       WidthRequest="400"
                       HeightRequest="48" />

                <!-- Search Button -->
                <Button Text="🔍 Search"
                    Command="{Binding SearchCommand}"
                    BackgroundColor="#007bff"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="48" />

                <!-- New Button -->
                <Button Text="➕ New"
                    Command="{Binding NewClientCommand}"
                    BackgroundColor="#198754"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="48" />
            </HorizontalStackLayout>

            <!-- Output area -->
            <Label Text="{Binding ClientData}"
                   FontSize="14"
                   LineBreakMode="WordWrap"
                   Margin="0,12,0,0" />

        </VerticalStackLayout>

        <!-- Bottom Clock Bar -->
        <components:BottomClockBar Grid.Row="1" />
    </Grid>
</ContentPage>
