<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AvaTerminal3.ViewModels"
             x:Class="AvaTerminal3.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Title="Login"
             BackgroundColor="{DynamicResource BackgroundBrush}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="18" HorizontalOptions="Center"
                             x:DataType="vm:LoginViewModel">

            <Label Text="ðŸ” AvaTerminal Login"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource TextBrush}" />

            <Entry Placeholder="Username"
                   Text="{Binding Username}"
                   Keyboard="Email"
                   BackgroundColor="{DynamicResource BackgroundBrush}"
                   TextColor="{DynamicResource TextBrush}" />

            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True"
                   BackgroundColor="{DynamicResource BackgroundBrush}"
                   TextColor="{DynamicResource TextBrush}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <Button Text="Login"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    BackgroundColor="{DynamicResource PrimaryBrush}"
                    TextColor="{DynamicResource TextBrush}" />

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}" />

            <Label Text="Forgot password?"
                   TextColor="{DynamicResource TextBrush}"
                   FontSize="12"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
