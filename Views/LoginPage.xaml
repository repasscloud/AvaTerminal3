<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AvaTerminal3.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:AvaTerminal3.ViewModels"
    x:DataType="viewmodels:LoginViewModel">

    <ScrollView>
        <Grid VerticalOptions="Center" HorizontalOptions="Center">
            <Border
                Stroke="#DDDDDD"
                StrokeThickness="1"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                Padding="32"
                StrokeShape="RoundRectangle 12"
                WidthRequest="380"
                HorizontalOptions="Center">

                <VerticalStackLayout Spacing="20">

                    <Label Text="Sign In"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                    <Entry Placeholder="Username"
                           Text="{Binding Username}"
                           Keyboard="Email"
                           ReturnType="Next"
                           BackgroundColor="{AppThemeBinding Light=#F6F6F6, Dark=#2C2C2C}"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           HeightRequest="44" />

                    <Entry Placeholder="Password"
                           Text="{Binding Password}"
                           IsPassword="True"
                           ReturnType="Go"
                           Completed="PasswordEntry_Completed"
                           BackgroundColor="{AppThemeBinding Light=#F6F6F6, Dark=#2C2C2C}"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           HeightRequest="44" />

                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           IsVisible="{Binding HasError}"
                           FontSize="13"
                           FontAttributes="Italic" />

                    <StackLayout Orientation="Horizontal"
                        VerticalOptions="Center"
                        Spacing="10">
                        <Label Text="Dev Mode:" VerticalOptions="Center" />
                        <Switch IsToggled="{Binding UseDev}"
                            HorizontalOptions="End" />
                    </StackLayout>

                    <Button Text="ðŸ” Login"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="#007bff"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="48"
                            FontAttributes="Bold" />

                    <Button Text="Forgot Password?"
                            Command="{Binding ForgotPasswordCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#007bff"
                            FontSize="14"
                            FontAttributes="Italic"
                            HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>